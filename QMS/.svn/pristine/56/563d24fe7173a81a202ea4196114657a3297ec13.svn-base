.login-box{
    width:100%;
    height:100%;
    background:#fff;
    .login{
    width: 100%;
    height: 100%;
    background: #FFF;    
    position: relative;
    .logo{
         width:100%;
         height:86px;
         margin-left:40px;
         padding-top:20px;
         display: -webkit-flex; 
         display: flex;
         box-sizing:border-box;
        -moz-box-sizing:border-box; /* Firefox */
        -webkit-box-sizing:border-box; /* Safari */

    }       
        .logo-img{
            height:75px;
            width:150px;
            background:url(./img/logo1.png) no-repeat;
            background-size:100%;
            text-align:center;        
            border:none!important;            
        }
        .logo-title{               
               line-height:55px;
               display:inline-block;
               margin-left:20px;
               font-size:20px;
               font-family:"Microsoft YaHei"
        }
    .login-banner{
        height:460px;
        max-height:700px;
        width:100%;
        background:url(./img/login_bg.jpg) no-repeat #6599fe;
        background-position: 20px center;       
        position:relative;
        }

@media (min-width: 1024px) {
    .login-banner{
      background-size:85%;
    }
}

@media (min-width: 1440px) {
   .login-banner{
      background-size:85%;
    }
    .login-box .login-con{width:20%}
}

@media (min-width: 1920px) {
 .login-banner{
      background-size: 72%;
    }
 .login-box .login-con{
        width:20%;
    }
} 


    .login-footer{
        width:100%;
        height:90px;
        margin-top:30px;
        text-align:center;

    }
        &-con{
        position: absolute;
        right: 20%;
        margin-right:-192px;
        top: 50%;
        transform: translateY(-60%);
        width: 360px;
        &-header{
            font-size: 16px;
            font-weight: 300;
            text-align: center;
            padding: 30px 0;
        }
        .form-con{
            padding: 24px 0 0;
        }
        .login-tip{
            font-size: 10px;
            text-align: center;
            color: #c3c3c3;
            padding-bottom:10px;
        }
     }
    
}
}